<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lastRegistration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/register_bk_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86dp">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="-9dp"
                    android:padding="15dp"
                    android:text="Log Your Diet Here!\n"
                    android:textAlignment="center"
                    android:textColor="@color/whiteTextColor" />

                <ImageView
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="-28dp"
                    android:src="@drawable/diet" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="411dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="375dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/nameOfMeal"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:ems="10"
                        android:hint="Name of Meal"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/numOfCal"
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:ems="10"
                        android:hint="Amount of Calories"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/addNotes"
                        android:layout_width="match_parent"
                        android:layout_height="83dp"
                        android:ems="10"
                        android:hint="Additional Notes(Optional)"
                        android:inputType="textPersonName" />

                    <Button
                        android:id="@+id/mealSubmitButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit Your Meal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>