<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lastRegistration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/register_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context="com.example.tracc_it.VitalsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="86dp">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_width="333dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:padding="15dp"
                    android:text="Modify It Here!"
                    android:textColor="@color/whiteTextColor" />

                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="36dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_local_hospital_24" />
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="475dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="565dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/medName"
                        style="@style/modifiedEditText"
                        android:hint="Medication Name"
                        android:inputType="text"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/medDose"
                        style="@style/modifiedEditText"
                        android:hint="Medication Dose in Mg"
                        android:inputType="number"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/medSignature"
                        style="@style/modifiedEditText"
                        android:hint="Medicine Signature"
                        android:inputType="text"
                        android:maxLines="1" />


                    <CheckBox
                        android:id="@+id/checkBoxMed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Would you like to set up a Notification for this medication?" />

                    <CheckBox
                        android:id="@+id/checkBoxMed2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Would you like to remove the Notification for this medication?" />

                    <Button
                        android:id="@+id/medsButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/themeColor"
                        android:text="Edit" />

                    <TextView
                        style="@style/viewParent.headerText.NoMode"
                        android:layout_width="333dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:padding="15dp"
                        android:text="Remove The Medication Selected"
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/removemedsButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/themeColor"
                        android:text="Remove this medication now" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:weightSum="12">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_side_bg" />

</RelativeLayout>