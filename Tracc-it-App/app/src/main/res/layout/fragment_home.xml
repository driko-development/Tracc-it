<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/register_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context="com.example.tracc_it.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="216dp">

                <ImageView
                    android:layout_width="134dp"
                    android:layout_height="121dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="65dp"
                    android:layout_marginRight="241dp"
                    android:src="@drawable/profilepic" />

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_width="231dp"
                    android:layout_height="92dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="65dp"
                    android:text="Welcome, John Doe!"
                    android:textColor="@color/whiteTextColor"
                    android:textSize="30sp" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="487dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="471dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextPNumbEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Your Personal Information:" />

                    <TextView
                        android:id="@+id/phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:text="Phone Number" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Age" />

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Height" />

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Weight" />

                    <EditText
                        android:id="@+id/editTextmdInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Your Doctor's Information:" />

                    <TextView
                        android:id="@+id/mdName"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Doctor's Name" />

                    <TextView
                        android:id="@+id/mdPhone"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Doctor's Phone" />

                    <TextView
                        android:id="@+id/mdEmail"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Doctor's Email" />

                    <Button
                        android:id="@+id/callButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Call Your Doctor" />

                    <Button
                        android:id="@+id/emailButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email Your Doctor" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:weightSum="12">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="3"
                    android:background="@color/whiteTextColor" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_side_bg" />

</RelativeLayout>